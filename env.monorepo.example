# ===========================================
# Monorepo Environment Configuration
# ===========================================
# Copy this file to .env when using with Django backend
# cp env.monorepo.example .env

# Application Mode
# Set to 'django-spa' when running with Django backend
VITE_MODE=django-spa

# ===========================================
# API Configuration
# ===========================================
# For local development with Django running on port 8000
VITE_API_BASE_URL=http://localhost:8000/api/v1
# For Docker compose setup
# VITE_API_BASE_URL=http://backend:8000/api/v1

VITE_API_TIMEOUT=10000
VITE_API_RETRIES=3
VITE_API_VERSION=v1

# ===========================================
# Authentication (Django Ninja JWT)
# ===========================================
# Token storage keys (should match what you use in localStorage)
VITE_AUTH_TOKEN_KEY=access_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_ENABLE_MAGIC_LINK=true

# ===========================================
# Django Integration
# ===========================================
# CSRF token cookie name (default Django setting)
VITE_DJANGO_CSRF_TOKEN_NAME=csrftoken

# Static and media URL prefixes (match your Django settings)
VITE_DJANGO_STATIC_URL=/static/
VITE_DJANGO_MEDIA_URL=/media/

# API prefix (match your Django Ninja router prefix)
VITE_DJANGO_API_PREFIX=/api/v1

# ===========================================
# Features
# ===========================================
VITE_ENABLE_TODOS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_DEVTOOLS=true

# Disable mock API when connected to real backend
VITE_ENABLE_MOCK_API=false

# ===========================================
# Environment
# ===========================================
VITE_APP_ENV=development
VITE_APP_NAME=Django + React App
VITE_APP_VERSION=1.0.0
VITE_DEBUG=true

# ===========================================
# Production Overrides
# ===========================================
# Uncomment and modify for production deployment:
# VITE_MODE=django-spa
# VITE_API_BASE_URL=/api/v1
# VITE_APP_ENV=production
# VITE_DEBUG=false
# VITE_ENABLE_DEVTOOLS=false
